ALL_RESFLAGS += $(RESFLAGS) $(DEFINES) $(INCLUDES)
ALL_LDFLAGS += $(LDFLAGS) -LC:/VulkanSDK/1.2.198.1/Lib -L/usr/lib64 -m64 -mwindows
